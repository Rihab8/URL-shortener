<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
    <title>Shortener</title>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
      <a class="navbar-brand text-white" href="/">Shortener</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent"></div>
    </nav>
    <div class="container">
      <h1 style="text-align: center; padding-top: 20px;">
        Make it short Make it better
      </h1>
      <form action="/shortUrls" method="POST" class="my-4 form-inline">
        <label for="Url" class="sr-only">URL</label>
        <input
          required
          placeholder="Url goes here"
          type="url"
          name="Url"
          id="Url"
          class="form-control col mr-2"
        />
        <button class="btn btn-primary" type="submit">Shortener</button>
      </form>

      <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th>Long URL</th>
            <th>Shortened URL</th>
            <th>No of visits</th>
          </tr>
        </thead>
        <tbody>
          <%var i=0%> <% shortUrls.map(shortUrl => { i=i+1%>
          <tr>
            <%if(i===shortUrls.length){%>
            <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
            <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
            <td><%= shortUrl.clicks %></td>
          </tr>
          <%}%> <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
