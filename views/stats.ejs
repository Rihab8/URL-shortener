<!DOCTYPE html>

<html>
  <head>
    <title>
      Stats
    </title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      href="https://fonts.googleapis.com/css?family=Alegreya+Sans+SC:800|Alegreya+Sans:800|Assistant|Concert+One|Cutive+Mono|Dosis|Lato:400,700|Martel+Sans:800|Merriweather+Sans:700|Montaga|Montserrat:300,400|Noto+Sans:700|Open+Sans:400,700|PT+Sans|Source+Sans+Pro:700|Ubuntu:300,300i,400,400i,500,700|Work+Sans:700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
    <script src="assets/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
    <link href="/assets/styles.css" rel="stylesheet" type="text/css" />
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-light">
    <a class="navbar-brand" href="/">Shortener</a>
    <a class="navbar mr-1" style="padding-left: 500px;" href="/stats">Statistics</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  
    <div class="collapse navbar-collapse" id="navbarSupportedContent"></div>
  </nav>

    <div class="array-container">
      <% shortUrls.map(url => {%>
        <%if(url.clicks===1){%> 
         <div class="array-bar" style="height:100px;"><p style="color: black;"><%=url.clicks%></p></div>
         <%}%>
        <%if(url.clicks===2){%>
        <div class="array-bar" style="height:100px;"><p style="color: black;"><%=url.clicks%></p></div>
        <%}%>
        <%if(url.clicks===3){%>
        <div class="array-bar" style="height:100px;"><p style="color: black;"><%=url.clicks%></p></div>
        <%}%>
        <%if(url.clicks===4){%>
        <div class="array-bar" style="height:100px;"><p style="color: black;"><%=url.clicks%></p></div>
        <%}%>
        <%if(url.clicks===9){%>
        <div class="array-bar" style="height:900px;"><p style="color: black;"><%=url.clicks%></p></div>
        <%}%>
        <%if(url.clicks===5){%>
        <div class="array-bar" style="height:500px;"><p style="color: black;"><%=url.clicks%></p></div>
        <%}%>
        <%if(url.clicks===6){%>
        <div class="array-bar" style="height:600px;"><p style="color: black;"><%=url.clicks%></p></div>
        <%}%>
        <%if(url.clicks===7){%>
        <div class="array-bar" style="height:700px;"><p style="color: black;"><%=url.clicks%></p></div>
        <%}%>
        <%if(url.clicks===8){%>
        <div class="array-bar" style="height:800px;"><p style="color: black;"><%=url.clicks%></p></div>
        <%}%>
    <% }) %>
    <h3 style="text-align: center;">Various Links</h3>
    <table class="table table-striped table-responsive">
      <thead>
        <tr>
          <th>Full URL</th>
          <th>Short URL</th>
          <th>Clicks</th>
          <th>Time created</th>
        </tr>
      </thead>
      <tbody>
        <% shortUrls.map(url => { %>
        <tr>
          <td><a href="<%= url.full %>"><%= url.full %></a></td>
          <td><a href="<%= url.short %>"><%= url.short %></a></td>
          <td><%= url.clicks %></td>
          <td><%= url.time %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
